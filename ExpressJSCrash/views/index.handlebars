<h2 class="text-center mb-3">MembersApp</h2>
<form action="/api/members" method="POST" class="mb-4">
<div class="from-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">    <!--name is important since it is label for the data encoded by body parser midware--> 
</div>
<div class="from-group">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control">    <!--name is important since it is label for the data encoded by body parser midware--> 
</div>
<input type="submit" value="Add Member" class="btn btn-primary btn-block mt-4">
</form>
<h4>{{render}}</h4>
<ul class="list-group">
    {{#each members}}      <!--looping in handlebars -->
        <li class="list-group-item">{{this.name}} : {{this.email}}</li>
    {{/each}}
</ul>
<a href="/api/members" class="btn btn-light mt-4">API</a>
